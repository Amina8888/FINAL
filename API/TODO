–ö–æ–ø–∏—Ä–æ–≤–∞—Ç—å
import { useMyProfile } from "../hooks/useMyProfile";

export default function Dashboard() {
  const { user, specialistProfile, loading, error } = useMyProfile();

  if (loading) return <p className="text-center mt-4">–ó–∞–≥—Ä—É–∑–∫–∞...</p>;
  if (error) return <p className="text-red-500">{error}</p>;

  return (
    <div className="p-6">
      <h1 className="text-2xl font-bold mb-4">–ü—Ä–∏–≤–µ—Ç, {user.fullName || user.email}</h1>
      
      <p>–†–æ–ª—å: {user.role}</p>

      {user.role === "Specialist" && specialistProfile && (
        <div className="mt-6 p-4 bg-zinc-800 rounded">
          <h2 className="text-xl mb-2">–ê–Ω–∫–µ—Ç–∞</h2>
          <p><strong>–ö–∞—Ç–µ–≥–æ—Ä–∏—è:</strong> {specialistProfile.category}</p>
          <p><strong>–ü–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏—è:</strong> {specialistProfile.subcategory}</p>
          <p><strong>–¶–µ–Ω–∞:</strong> ${specialistProfile.pricePerConsultation}</p>
          <p><strong>–õ–∏—Ü–µ–Ω–∑–∏—è:</strong> {specialistProfile.isLicenseApproved ? "‚úÖ –ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∞" : "‚è≥ –ù–∞ –ø—Ä–æ–≤–µ—Ä–∫–µ"}</p>
        </div>
      )}
    </div>
  );
}
