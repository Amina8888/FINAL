–ö–æ–ø–∏—Ä–æ–≤–∞—Ç—å
import { useEffect, useState } from "react";

export function useMyProfile() {
  const [user, setUser] = useState(null);
  const [specialistProfile, setSpecialistProfile] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState("");

  useEffect(() => {
    const token = localStorage.getItem("token");
    if (!token) {
      setError("–ù–µ –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω");
      setLoading(false);
      return;
    }

    const fetchData = async () => {
      try {
        const resUser = await fetch("https://localhost:5085/api/account/me", {
          headers: { Authorization: `Bearer ${token}` },
        });
        if (!resUser.ok) throw new Error("–û—à–∏–±–∫–∞ –ø–æ–ª—É—á–µ–Ω–∏—è –ø—Ä–æ—Ñ–∏–ª—è");
        const userData = await resUser.json();
        setUser(userData);

        if (userData.role === "Specialist") {
          const resSpec = await fetch("https://localhost:5085/api/specialist/profile", {
            headers: { Authorization: `Bearer ${token}` },
          });
          if (!resSpec.ok) throw new Error("–û—à–∏–±–∫–∞ –∞–Ω–∫–µ—Ç—ã —Å–ø–µ—Ü–∏–∞–ª–∏—Å—Ç–∞");
          const profileData = await resSpec.json();
          setSpecialistProfile(profileData);
        }
      } catch (err) {
        setError(err.message);
      } finally {
        setLoading(false);
      }
    };

    fetchData();
  }, []);

  return { user, specialistProfile, loading, error };
}
